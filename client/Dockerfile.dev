# Development Dockerfile for farmOS Client
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 8080

# Start dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
